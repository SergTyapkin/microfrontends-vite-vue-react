@require 'scrollbars.styl'

html
    overflow-x hidden
    scrollable()
    min-height 100%

*
    box-sizing border-box
    margin 0
    padding 0

body
    height 100%
    margin 0
    padding 0
    border none
    outline none
    -webkit-overflow-scrolling touch
    width 100vw
    min-height 100vh
    position relative
    overflow-x hidden
    font-family Arial, monospace
    background #212121
    overflow-y hidden

#app
    width 100%
    height 100%

a
    text-decoration none
a:visited
    color inherit
